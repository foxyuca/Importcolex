<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity FibrasTelaCruda.
    -->
    <changeSet id="20151001222802" author="jhipster">
        <createTable tableName="FIBRAS_TELA_CRUDA">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="referencia" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="peso" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="inventario_fibras_id" type="bigint"/>
            <column name="tela_cruda_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="inventario_fibras_id"
                                 baseTableName="FIBRAS_TELA_CRUDA"
                                 constraintName="fk_fibrastelacruda_inventariofibras_id"
                                 referencedColumnNames="id"
                                 referencedTableName="INVENTARIO_FIBRAS"/>

        <addForeignKeyConstraint baseColumnNames="tela_cruda_id"
                                 baseTableName="FIBRAS_TELA_CRUDA"
                                 constraintName="fk_fibrastelacruda_telacruda_id"
                                 referencedColumnNames="id"
                                 referencedTableName="TELA_CRUDA"/>
    </changeSet>
    <changeSet id="20151022100702" author="Victor Perez">
    	<addColumn tableName="INVENTARIO_FIBRAS">
    		<column name="cantidad_usada" type="integer" defaultValue="0">
                <constraints nullable="false"/>
                
            </column>
    	</addColumn>  
    </changeSet>
    <changeSet id="20151022100703" author="Victor Perez">
    	<dropColumn tableName="INVENTARIO_FIBRAS">
    		<column name="cantidad_usada"></column>
    	</dropColumn> 
    	<addColumn tableName="FIBRAS_TELA_CRUDA">
    		<column name="cantidad_usada" type="integer" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>  
    </changeSet>
</databaseChangeLog>
